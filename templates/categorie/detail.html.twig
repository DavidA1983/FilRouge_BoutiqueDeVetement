{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {% if produit.image %}
                <img src="{{ asset('images/' ~ produit.image) }}" class="img-fluid rounded shadow-sm" alt="{{ produit.nom }}">
            {% endif %}
        </div>
        <div class="col-md-6">
            <h2>{{ produit.nom }}</h2>
            <p class="text-muted fs-4">{{ produit.prix }} €</p>
            <p>{{ produit.description }}</p>
            
            <a href="{{ path('app_panier_ajouter', {'id': produit.id}) }}" class="btn btn-success btn-lg mt-3">
                Ajouter au panier
            </a>
        <a href="javascript:history.back()" class="btn btn-secondary">
    ← Page précédente
</a>
        </div>
    </div>
</div>
{% endblock %}
